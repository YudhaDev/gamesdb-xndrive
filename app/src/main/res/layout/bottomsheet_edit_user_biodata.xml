<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit User Biodata"
            android:textAlignment="center"
            style="@style/heading_style_font"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink_divider"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/bottomsheet_edit_user_biodata_name_edittext"
            android:hint="Nama User"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bottomsheet_edit_user_biodata_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/bottomsheet_edit_user_biodata_email_edittext"
            android:hint="Email User"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bottomsheet_edit_user_biodata_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:lines="1"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottomsheet_edit_user_biodata_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="30dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>