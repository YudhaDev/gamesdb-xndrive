<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/items_gamelayout_imageview_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/_10sdp"
        >
        <ImageView
            android:id="@+id/items_gamelayout_imageview"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/rectangle_grey"
            android:scaleType="fitXY"
            />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/items_gamelayout_imageview_cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/items_gamelayout_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="some title here.."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/heading_style_font"
            />
        <TextView
            android:id="@+id/items_gamelayout_developer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some developer here.."
            app:layout_constraintTop_toBottomOf="@id/items_gamelayout_title_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/content_style_font"
            />

        <TextView
            android:id="@+id/items_gamelayout_genre_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="genres"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/items_gamelayout_developer_textview" />
