<resources>

    <style name="Widget.Theme.Dicoding_finalproject_basicandroid.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Dicoding_finalproject_basicandroid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="my_cardview_style" parent="Theme.MaterialComponents.DayNight">
    </style>

    <style name="heading_style_font" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_style_font_with_padding" parent="heading_style_font">
        <item name="android:padding">10dp</item>
    </style>

    <style name="content_style_font" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/pink_secondary_text</item>
    </style>

    <style name="oncolored_style_font" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/pink_texticons</item>
    </style>

</resources>